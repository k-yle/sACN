  "author": "Kyle Hensel",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc",
    "lint": "eslint --ext .ts --ignore-path .gitignore .",
    "unit-tests": "nyc mocha -r ts-node/register --timeout 10000 'test/**/*.test.ts'",
    "test": "npm run lint && npm run build && npm run unit-tests",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "prepublishOnly": "tsc",
    "trypublish": "npm publish || true"
  },
  "main": "dist",
  "types": "dist/index.d.ts",
  "files": [
    "src",
    "dist",
    "tsconfig.json"
  ],
  "repository": "git://github.com/k-yle/sACN.git",
  "engines": {
    "node": ">=10.0.0"
  },
  "keywords": [
    "dmx",
    "dmx512",
    "sacn",
    "artnet",
    "stage-lighting",
    "rdm",
    "e131",
    "e133",
    "enttec",
    "dmxking"
  ],
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "coveralls": "^3.1.1",
    "eslint": "^8.10.0",
    "eslint-config-kyle": "^8.12.0",
    "mocha": "^9.2.1",
    "nyc": "^15.1.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "eslintConfig": {
    "extends": "kyle",
    "rules": {
      "no-bitwise": 0,
      "@typescript-eslint/no-non-null-assertion": 0
    }
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "all": true,
    "reporter": [
      "text",
      "lcov"
    ],
    "exclude": [
      "dist/**",
      "coverage/**"
    ]
  }
